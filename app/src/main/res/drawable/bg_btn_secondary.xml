<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/border_radius" />
            <stroke android:width="1px" android:color="@color/colorGrayLight" />
            <solid android:color="@color/colorGrayLight" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/border_radius" />
            <stroke android:width="1px" android:color="@color/bgSecondary" />
            <solid android:color="@color/bgSecondary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/border_radius" />
            <stroke android:width="1px" android:color="@color/bgSecondary" />
            <solid android:color="@color/bgSecondary" />
        </shape>
    </item>
</selector>
