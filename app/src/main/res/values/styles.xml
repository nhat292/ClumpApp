<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PrimaryActivity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PrimaryActivity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeWhite" parent="@style/AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="AppThemeChat" parent="@style/AppTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--TextView-->
    <style name="TextViewNormal" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextViewTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextViewHeader" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextViewNormalWhite" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextViewTitleWhite" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextViewHeaderWhite" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!--EditText-->
    <style name="EditTextNormal" parent="android:Widget.EditText">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/item_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="EditTextTitle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/item_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="EditTextHeader" parent="android:Widget.EditText">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/item_margin</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="EditTextSearch" parent="android:Widget.EditText">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/bg_input_search</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!--Button-->
    <style name="ButtonSecondaryBorder" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/item_margin</item>
        <item name="android:paddingRight">@dimen/item_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_btn_secondary_border</item>
    </style>

    <style name="ButtonSecondaryPopup" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/textColorNormalSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/item_margin</item>
        <item name="android:paddingRight">@dimen/item_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@drawable/bg_btn_secondary_popup</item>
    </style>

    <style name="ButtonItemBorder" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/textColorNormalSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/item_margin</item>
        <item name="android:paddingRight">@dimen/item_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@drawable/bg_btn_item_border</item>
    </style>

    <style name="ButtonSecondary" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/item_margin</item>
        <item name="android:paddingRight">@dimen/item_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_btn_secondary</item>
    </style>

    <style name="ButtonChat" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/item_margin</item>
        <item name="android:paddingRight">@dimen/item_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_btn_chat</item>
    </style>

    <style name="ButtonPrimary" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/item_margin</item>
        <item name="android:paddingRight">@dimen/item_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>

    <style name="ImageButtonIcon">
        <item name="android:layout_width">@dimen/size_item_icon</item>
        <item name="android:layout_height">@dimen/size_item_icon</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_image_button</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextViewMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/bg_text_menu_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!--Sweet Alert-->
    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ratingBarCustom" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>


    <!--Calender-->
    <style name="calendar_event_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FF6600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>

    <!--TimePicker-->
    <style name="TimePickerStyle" parent="android:Widget.Material.TimePicker" tools:ignore="NewApi">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:numbersTextColor">@android:color/white</item>
        <item name="android:numbersSelectorColor">#80000000</item>
        <item name="android:numbersBackgroundColor">@color/colorPrimary</item>
        <item name="android:headerBackground">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:numbersInnerTextColor">@color/colorPrimary</item>
        <item name="android:headerTimeTextAppearance">
            @style/TextAppearance.TimePickerDialogStyle.TimeLabel
        </item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="TextAppearance.TimePickerDialogStyle.TimeLabel" parent="@android:style/TextAppearance.Material" tools:ignore="NewApi">
        <item name="android:textSize">80sp</item> <!-- from -->
        <item name="android:textColor">@color/textColorNormal</item>

    </style>

</resources>
